<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MenuButton">
        <item name="android:layout_width">260dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingBottom">30dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:shadowColor">@color/black_transparent</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">12dp</item>
    </style>
    
    <style name="CustomBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/blue_bg</item>
        <item name="itemBackground">@color/blue_bg</item>
        <item name="itemIconTint">@color/navigation_item_text</item>
        <item name="itemTextColor">@color/navigation_item_text</item>
        <item name="itemTextAppearanceActive">@style/NavTextActive</item>
    </style>

    <style name="NavTextActive">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">#000000</item>
        <item name="android:backgroundTint">#FFFFFF</item>
    </style>
</resources>